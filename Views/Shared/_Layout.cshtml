<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kampüs Yanımda</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        html {
            scroll-behavior: smooth;
        }
        .dropdown {
            position: relative;
        }
        .dropdown-menu {
            position: absolute;
            z-index: 9999;
            right: 0;
            background-color: white;
            border: 1px solid rgba(0,0,0,.15);
            border-radius: 0.25rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,.175);
        }
        .nav-container {
            position: relative;
            z-index: 1000;
            display: flex;
            height: 50px;
            padding: 0.5rem 1rem;
            align-items: center;
            background-color: white;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .nav-links {
            display: flex;
            align-items: center;
        }
        .nav-brand {
            margin-right: 20px;
        }
        .nav-menu {
            display: flex;
            align-items: center;
        }
        .nav-item {
            margin-right: 20px;
        }
        body {
            background: white !important;
        }
    </style>
</head>
<body>
    <nav class="nav-container">
        <div class="nav-links">
            <a href="/" class="nav-brand">Kampüs Yanımda</a>
            <div class="nav-menu">
                <a asp-controller="Events" asp-action="Index" class="nav-item">Etkinlikler</a>
                <a asp-controller="Topluluk" asp-action="Liste" class="nav-item">Topluluklar</a>
                <a asp-controller="NedenTopluluk" asp-action="Index" class="nav-item">Neden Kampüs Yanımda?</a>
            </div>
        </div>
        
        <div class="auth-buttons">
            @if (User.Identity.IsAuthenticated)
            {
                <div class="dropdown">
                    <a class="btn btn-outline dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i> Profilim
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/Account/Profile">Profil</a></li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li><a class="dropdown-item" href="/Admin/Index">Admin Paneli</a></li>
                        }
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/Account/Logout">Çıkış Yap</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="auth-buttons">
                    <a class="btn btn-login" asp-area="" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                    <a class="btn btn-register" asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                </div>
            }
        </div>
    </nav>

    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>