@{
    ViewData["Title"] = "Kayıt Ol";
}
<div class="auth-container">
    <div class="auth-box">
        <h2>Hesap Oluştur</h2>
        <form method="post" asp-controller="Account" asp-action="Register" class="auth-form">
            <div class="form-group">
                <label for="İsimSoyisim">Ad Soyad</label>
                <input type="text" name="İsimSoyisim" id="İsimSoyisim" class="form-control" placeholder="Ad Soyad" required>
            </div>
            
            <div class="form-group">
                <label for="Email">E-posta</label>
                <input type="email" name="Email" id="Email" class="form-control" placeholder="ornek@email.com" required>
            </div>
            
            <div class="form-group">
                <label for="SifreHash">Şifre</label>
                <input type="password" name="SifreHash" id="SifreHash" class="form-control" placeholder="••••••••" required>
            </div>
            
            <div class="form-group">
                <label for="password-confirm">Şifre Tekrar</label>
                <input type="password" name="password-confirm" id="password-confirm" class="form-control" placeholder="••••••••" required>
            </div>
            
            <div class="form-check mb-3">
                <input type="checkbox" class="form-check-input" id="terms" required>
                <label class="form-check-label" for="terms">
                    <a href="/terms">Kullanım Koşulları</a>'nı kabul ediyorum
                </label>
            </div>
            
            <button type="submit" class="btn btn-primary w-100">Kayıt Ol</button>
            
            <div class="auth-links">
                Zaten hesabınız var mı? <a href="/Account/Login">Giriş Yap</a>
            </div>
        </form>
    </div>
<script> // Şifre Eeşleşmesi Doğru Olup Olmadığını Kontrolu
    document.querySelector("form").addEventListener("submit", function (e) {
        const password = document.getElementById("SifreHash").value;
        const confirmPassword = document.getElementById("password-confirm").value;

        if (password !== confirmPassword) {
            e.preventDefault(); 
            alert("Şifreler Eşleşmiyor!");
        }
    });
</script>
</div> 