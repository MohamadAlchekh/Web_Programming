@{
    ViewData["Title"] = "Giriş Yap";

}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<div class="auth-container">
    <div class="auth-box">
        <h2>Giriş Yap</h2>
        
        @if (!string.IsNullOrEmpty(TempData["Error"]?.ToString()))
        {
            <div class="alert alert-danger mb-3">
                @TempData["Error"]
            </div>
        }

        <form class="auth-form" asp-action="Login" asp-controller="Account" method="post">
            <div class="form-group">
                <label for="email">E-posta</label>
                <input type="email" 
                       id="email" 
                       name="email" 
                       class="form-control" 
                       placeholder="ornek@email.com" 
                       required>
            </div>
            
            <div class="form-group">
                <label for="password">Şifre</label>
                <input type="password" 
                       id="password" 
                       name="password" 
                       class="form-control" 
                       placeholder="••••••••" 
                       required>
            </div>
            
            <div class="form-check mb-3">
                <input type="checkbox" 
                       class="form-check-input" 
                       id="rememberMe" 
                       name="rememberMe">
                <label class="form-check-label" for="rememberMe">
                    Beni Hatırla
                </label>
            </div>
            @if (ViewBag.Error != null)
            {
                <div class="text-danger mt-3">
                    @ViewBag.Error
                </div>
            }
            <button type="submit" class="btn btn-primary w-100">
                Giriş Yap
            </button>
            
            <div class="auth-links">
                <a href="/Account/ForgotPassword">Şifremi Unuttum</a>
                <span class="separator">|</span>
                Hesabınız yok mu? <a href="/Account/Register">Kayıt Ol</a>
            </div>
        </form>
    </div>
</div>