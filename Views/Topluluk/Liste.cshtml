@model List<FinalProject.Models.Topluluk>

@{
    ViewData["Title"] = "Topluluklar";
}

<div class="topluluk-page">
    <div class="topluluk-hero-section">
        <div class="topluluk-hero-content">
            <div class="topluluk-hero-text">
                <h1>Topluluklar</h1>
                <p>Kampüs Yanımda'daki tüm toplulukları keşfedin</p>
            </div>
        </div>
    </div>

    <div class="topluluk-container mt-5">
        <div class="d-flex justify-content-end mb-4">
            <a href="@Url.Action("Olustur", "Topluluk")" class="btn btn-primary">
                <i class="bi bi-plus-lg"></i> Yeni Topluluk
            </a>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center my-5">
                <div class="no-topluluk">
                    <i class="bi bi-people"></i>
                    <h4>Henüz hiç topluluk yok</h4>
                    <p>İlk topluluğu oluşturmak için "Yeni Topluluk" butonuna tıklayın.</p>
                </div>
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var topluluk in Model)
                {
                    <div class="col-md-4">
                        <a href="@Url.Action("Detay", "Topluluk", new { id = topluluk.ID })" class="text-decoration-none">
                            <div class="topluluk-card">
                                <div class="topluluk-card-body">
                                    <h3 class="topluluk-card-title">@topluluk.Isim</h3>
                                    <p class="topluluk-card-text">@topluluk.Aciklama</p>
                                    <div class="topluluk-card-meta">
                                        <span><i class="bi bi-people"></i> @topluluk.UyeSayisi üye</span>
                                        @if (topluluk.Onayli)
                                        {
                                            <span class="topluluk-verified"><i class="bi bi-patch-check-fill"></i> Onaylı</span>
                                        }
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    </div>

    <div class="topluluk-page-footer">
        <div class="topluluk-page-footer-content">
            <div class="footer-section">
                <h3>Kampüs Yanımda</h3>
                <p>Uludağ Üniversitesi öğrencilerinin sosyal ve akademik gelişimini destekleyen platform.</p>
            </div>
            <div class="footer-section">
                <h4>Platform</h4>
                <ul>
                    <li><a href="/NedenTopluluk">Neden Kampüs Yanımda?</a></li>
                    <li><a href="/Topluluk">Topluluklar</a></li>
                    <li><a href="/Events">Etkinlikler</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h4>Özellikler</h4>
                <ul>
                    <li><a href="/Topluluk/Olustur">Topluluk Oluştur</a></li>
                    <li><a href="/Events/Create">Etkinlik Oluştur</a></li>
                </ul>
            </div>
        </div>
    </div>
</div> 