@using FinalProject.Models

@model ToplulukOlusturmaIstegi

@{

    ViewData["Title"] = "Topluluk Oluştur";

}


<div class="topluluk-bg"></div>

<div class="container mt-5">

    <div class="row justify-content-center">

        <div class="col-md-8">

            <div class="card">

                <div class="card-header">

                    <h2 class="text-center">Yeni Topluluk Oluşturma Formu</h2>

                </div>

                <div class="card-body">

                    <div class="alert alert-info">

                        <i class="bi bi-info-circle"></i> Topluluk oluşturma talebiniz yöneticiler tarafından incelenecektir. 

                        Bu süreç 2-3 iş günü sürebilir.

                    </div>



                    <form asp-action="Olustur" asp-controller="Topluluk" method="post" enctype="multipart/form-data">

                        <div class="mb-3">

                            <label asp-for="ToplulukAdi" class="form-label"></label>
                            <input asp-for="ToplulukAdi" class="form-control" />
                            <span asp-validation-for="ToplulukAdi" class="text-danger"></span>

                        </div>

                        <div class="mb-3">

                            <label asp-for="BaskanAdSoyad" class="form-label"></label>
                            <input asp-for="BaskanAdSoyad" class="form-control" placeholder="Örn: Samet Çevik" />
                            <span asp-validation-for="BaskanAdSoyad" class="text-danger"></span>

                        </div>



                        <div class="mb-3">

                            <label asp-for="KanitBelgesi" class="form-label"></label>
                            <input asp-for="KanitBelgesi" class="form-control" type="file" accept=".pdf,.jpg,.jpeg,.png" />
                            <div class="form-text">Kabul edilen formatlar: PDF, JPG, PNG. Maksimum dosya boyutu: 5MB</div>

                            <span asp-validation-for="KanitBelgesi" class="text-danger"></span>

                        </div>



                        <div class="mb-3">

                            <label asp-for="Aciklama" class="form-label"></label>
                            <textarea asp-for="Aciklama" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>

                        </div>

                        <div class="text-center">

                            <button type="submit" class="btn btn-primary">Topluluk Oluşturma Talebi Gönder</button>

                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="~/css/site.css" />


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

} 
