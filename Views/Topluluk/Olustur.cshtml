@using FinalProject.Models
@model ToplulukOlusturmaIstegi
@{
    ViewData["Title"] = "Topluluk Oluştur";
}

<style>
    body {
        background: linear-gradient(135deg, #667eea30 50%,#9f7cd630 100%) !important;
    }
    .topluluk-form-container {
        min-height: calc(100vh - 60px);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
    }
    .topluluk-form-box {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        padding: 2.5rem;
        border-radius: 1rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 600px;
    }
    .btn-primary {
        padding: 0.8rem 1.5rem;
        background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
        border: none;
        font-weight: 500;
    }
    .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(124, 58, 237, 0.3);
        background: var(--hover-purple);
    }
    .form-control {
        padding: 0.75rem 1rem;
        border: 1px solid rgba(0, 0, 0, 0.1);
        border-radius: 0.5rem;
    }
    .form-control:focus {
        border-color: var(--primary-color);
        box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }
    .alert-info {
        background-color: rgba(99, 102, 241, 0.1);
        border: none;
        border-left: 4px solid var(--primary-color);
        color: var(--text-dark);
    }
</style>

<div class="topluluk-form-container">
    <div class="topluluk-form-box">
        <h2 class="text-center mb-4">Yeni Topluluk Oluşturma Formu</h2>
        
        <div class="alert alert-info mb-4">
            <i class="bi bi-info-circle"></i> Topluluk oluşturma talebiniz yöneticiler tarafından incelenecektir. 
            Bu süreç 2-3 iş günü sürebilir.
        </div>

        <form asp-action="Olustur" asp-controller="Topluluk" method="post" enctype="multipart/form-data">
            <div class="mb-3">
                <label asp-for="ToplulukAdi" class="form-label">Topluluk Adı</label>
                <input asp-for="ToplulukAdi" class="form-control" placeholder="Topluluğunuzun adını girin" />
                <span asp-validation-for="ToplulukAdi" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BaskanAdSoyad" class="form-label">Başkan Ad Soyad</label>
                <input asp-for="BaskanAdSoyad" class="form-control" placeholder="Örn: Samet Çevik" />
                <span asp-validation-for="BaskanAdSoyad" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="KanitBelgesi" class="form-label">Başkanlık Belgesi</label>
                <input asp-for="KanitBelgesi" class="form-control" type="file" accept=".pdf,.jpg,.jpeg,.png" />
                <div class="form-text">Kabul edilen formatlar: PDF, JPG, PNG. Maksimum dosya boyutu: 5MB</div>
                <span asp-validation-for="KanitBelgesi" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Aciklama" class="form-label">Topluluk Açıklaması</label>
                <textarea asp-for="Aciklama" class="form-control" rows="4" placeholder="Topluluğunuzun amacını ve faaliyetlerini açıklayın"></textarea>
                <span asp-validation-for="Aciklama" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5">Topluluk Oluşturma Talebi Gönder</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
